{
  "name": "devcrax",
  "version": "1.0.0",
  "description": "One-line DevOps tool installers",

  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "build:clean": "node scripts/clean-build.js && npm run build",
    "clean": "node scripts/clean-build.js",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:property": "vitest --run --grep \"Property\"",
    "dev:worker": "wrangler dev workers/script-worker.js",
    "deploy:worker": "wrangler deploy",
    "deploy:worker:production": "wrangler deploy --env production",
    "deploy:pages": "npm run build:clean && wrangler pages deploy .svelte-kit/cloudflare",
    "deploy": "npm run deploy:worker && npm run deploy:pages",
    "deploy:production": "npm run test && npm run deploy:worker:production && npm run deploy:pages"
  },
  "keywords": ["devops", "installer", "cloudflare"],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@sveltejs/adapter-cloudflare": "^7.2.4",
    "@sveltejs/kit": "^2.49.0",
    "@vitest/ui": "^4.0.14",
    "fast-check": "^4.3.0",
    "svelte": "^5.45.2",
    "vite": "^7.2.4",
    "vitest": "^4.0.14",
    "wrangler": "^4.51.0"
  },
  "dependencies": {
    "monaco-editor": "^0.55.1"
  }
}
